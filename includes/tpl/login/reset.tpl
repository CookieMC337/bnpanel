
<div class="row">
	<div class="span8 columns offset4">
		<form class="form-stacked" id="login" name="login" method="post" action="">
		<fieldset>			
			<div class="clearfix">
				<label>{t}Username{/t}</label>
				<div class="input">
					<input type="text" name="user" id="user_login" tabindex="1" size="20"  maxlength ="20"  />
				</div>
			</div>
			<div class="clearfix">
				<label>{t}Email{/t}</label>
				<div class="input">
					<input type="text" name="email" id="email_login" tabindex="2" size="20" />
				</div>
			</div>
			
			<div class="clearfix">
				<input type="submit" class="btn primary" name="clogin" id="clogin" value="Reset Password" tabindex="3" />
			</div>			
			<div class="clearfix">
				<a href="./">Login</a>
			</div>
		</fieldset>
		</form>	
	</div>
</div>


